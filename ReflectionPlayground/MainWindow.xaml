<Window x:Class="ReflectionPlayground.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"        
        xmlns:views="clr-namespace:ReflectionPlayground.Views"
        Title="Reflection Playground" 
        Width="1366"
        Height="768" >
    <TabControl>
        <TabItem Header="Performance" >
            <views:PerformanceView />
        </TabItem>
        <TabItem Header="Repository" >
            <views:RepositoryView />
        </TabItem>
        <TabItem Header="Discovery" >
            <views:DiscoveryView />
        </TabItem>
    </TabControl>
</Window>
