<Window x:Class="ReflectionPlayground.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:reflectionPlayground="clr-namespace:ReflectionPlayground"
        Title="Reflection Playground" 
        Width="1366"
        Height="768" >
    <TabControl>
        <TabItem Header="Performance" >
            <reflectionPlayground:PerformanceView />
        </TabItem>
        <TabItem Header="Repository" >
            <reflectionPlayground:RepositoryView />
        </TabItem>
    </TabControl>
</Window>
